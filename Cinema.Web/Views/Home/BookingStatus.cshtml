@model BookingDto


<div class=" pt-4">
    <div class="card container" style="border:1px solid #808080;">
        <div class="card-header bg-dark text-light row" style="border-radius: 0px;">
            <div class="col-12 col-md-6">
                <h1 class="text-white">Status: Booked</h1>
            </div>
        </div>
        <div class="card-body">
            <div class="container rounded p-2">
                <div class="row">
                    <div class="col-12 col-lg-4 p-1 text-center">
                        <img src="@Model.Movie.ImageUrl" style="border-radius:35px;width:100%" class="rounded" />
                    </div>
                    <div class="col-12 col-lg-8">
                        <div class="row pl-3">

                            <div class="col-12">
                                <h1 class="text-secondary">@Model.Movie.Name</h1>
                                <p class="text-secondary">@Html.Raw(Model.Movie.Description)</p>
                            </div>

                            <div class="col-12">
                                <ul>
                                    <li>Name: @Model.User</li>
                                    <li>Number of tickets: @Model.NoOfTickets</li>                                 
                                    <li>Date: @Model.Date.ToString("MM/dd/yyyy")</li>
                                    <li>Time: @Model.Time</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


